{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}

    <div class="row">
        {{ form_start(form, {'method': 'POST', 'attr':{'class': 'register'}}) }}
        <div class="col-md-6">
            <div class="form-group">
                <label for="InputName">{{form_label(form.username)}}</label>
                <div class="input-group">
                    {{form_widget(form.username , {'attr': {'class' : 'form-control' , 'type' : 'text', 'required' : 'required' }})}}
                    <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                </div>
            </div>
            <div class="form-group">
                <label for="InputEmail">{{form_label(form.email)}}</label>
                <div class="input-group">
                    {{form_widget(form.email , {'attr': {'class' : 'form-control' , 'type' : 'email' }})}}
                    <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                </div>
            </div>
            <div class="form-group">
                <label for="InputMessage">{{ form_label (form.plainPassword.first) }}   </label>
                <div class="input-group">
                    {{ form_widget (form.plainPassword.first , {'attr': {'class' : 'form-control' , 'type' : 'password' }})}}
                    <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                </div>
            </div>
            <div class="form-group">
                <label for="InputMessage">{{ form_label (form.plainPassword.second) }}</label>
                <div class="input-group">
                    {{ form_widget (form.plainPassword.second , {'attr': {'class' : 'form-control' , 'type' : 'password' }})}}
                    <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
