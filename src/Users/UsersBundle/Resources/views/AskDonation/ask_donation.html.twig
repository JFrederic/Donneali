{% extends "::base.html.twig" %}

{% block body %}
<h1>Liste des dons disponibles</h1>

<ul>
  {% for donation in ListeDonation %}
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <!-- <img src="..." alt="..."> -->
        <div class="caption">

          <h3>{{donation.title}}</h3>
          <p>{{donation.city}}</p>
          <p>
            {{donation.description}}
          </p>
          <p>
            {{donation.date|date('d/m/Y')}}
          </p>
          <p><a href="/ask/donation/{{donation.id}}" class="btn btn-primary " role="button">Enquerir</a>
        </div>
      </div>
    </div>
  </div>
{% endfor %}
</ul>
{% endblock %}
