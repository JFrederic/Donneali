{% extends "::base.html.twig" %}

{% block body %}
  <h3 class="text-center">Faites votre dons en remplissant les champs ci-dessous : </h3>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                {{ form_start(form) }}

                <fieldset class="form-group">
                    <label for="formGroupExampleInput">{{form_label(form.category)}}</label>
                    {{form_widget(form.category , {'attr' : {'class' : 'form-control' , 'type' : 'text'}})}}
                </fieldset>
                <fieldset class="form-group">
                    <label for="formGroupExampleInput">{{form_label(form.title)}}</label>
                    {{form_widget(form.title , {'attr' : {'class' : 'form-control' , 'type' : 'text'}})}}
                </fieldset>
                <fieldset class="form-group">
                    <label for="formGroupExampleInput">{{form_label(form.description)}}</label>
                    {{form_widget(form.description , {'attr' : {'class' : 'form-control' , 'type' : 'text'}})}}
                </fieldset>
                <fieldset class="form-group">
                    <label for="formGroupExampleInput">{{form_label(form.city)}}</label>
                    {{form_widget(form.city , {'attr' : {'class' : 'form-control' , 'type' : 'text'}})}}
                </fieldset>
                {% if success %}
                    <div class="alert alert-success" role="alert">
                        Votre don a été mis en ligne avec succès
                    </div>
                {% endif %}
                {{ form_end(form) }}
            </div>

        </div>
    </div>
{% endblock %}
